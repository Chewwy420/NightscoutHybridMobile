<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:NightscoutMobileHybrid" x:Class="NightscoutMobileHybrid.NightscoutMobileHybridPage">
	<StackLayout Padding="0,15,0,0" BackgroundColor="Black">
		<WebView x:Name="wvNightscout" Source="https://lydia-nightscout.azurewebsites.net" HeightRequest="1000" WidthRequest="1000"></WebView>

		<Slider x:Name="slVolume" Minimum="0" Maximum="1" ValueChanged="SlVolume_ValueChanged" />
		<StackLayout Orientation="Horizontal">
			<Button x:Name="btnChangeURL" Text="Change URL" WidthRequest="100" BackgroundColor="Black" BorderWidth="1" BorderColor="White" TextColor="White" />
			<Button x:Name="btnRefresh" Text="Refresh" WidthRequest="75" BackgroundColor="Black" BorderWidth="1" BorderColor="White" TextColor="White" />
			<Label Text="Screen Lock Override" VerticalTextAlignment="Center" TextColor="White" />
			<Switch x:Name="swScreenLockOverride" VerticalOptions="Center" />
		</StackLayout>
	</StackLayout>
</ContentPage>
